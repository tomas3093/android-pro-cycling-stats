<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="2dp">

    <ImageView
        android:id="@+id/ivCyclistThumbnail"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_marginEnd="15dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        tools:srcCompat="@tools:sample/avatars[0]" />

    <TextView
        android:id="@+id/tvCyclistFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ivCyclistThumbnail"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:text="@tools:sample/full_names" />

    <TextView
        android:id="@+id/tvCyclistNationality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCyclistFullName"
        android:layout_toEndOf="@+id/ivCyclistThumbnail"
        android:textSize="18sp"
        android:textStyle="italic"
        tools:text="@tools:sample/cities" />

    <TextView
        android:id="@+id/tvCyclistTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCyclistNationality"
        android:layout_toEndOf="@+id/ivCyclistThumbnail"
        android:textSize="18sp"
        android:textStyle="italic"
        tools:text="@tools:sample/lorem" />

</RelativeLayout>
